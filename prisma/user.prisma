model User {
  id       String  @id @default(uuid(7))
  name     String
  email    String  @unique
  password String
  isActive Boolean @default(true)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  roles         UserRole[]
  audit         Audit[]
  refreshTokens RefreshToken[]
}
