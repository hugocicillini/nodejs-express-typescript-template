enum RoleName {
  SUPER_ADMIN
  ADMIN
  USER
}

model Role {
  id          String   @id @default(uuid(7))
  name        RoleName @unique
  description String?
  isActive    Boolean  @default(true)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  userRoles UserRole[]
}
