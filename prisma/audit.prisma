model Audit {
  id       String @id @default(uuid(7))
  entity   String
  entityId String

  action    String
  ip        String?
  userAgent String?
  payload   Json?
  createdAt DateTime @default(now())

  userId String?
  User   User?   @relation(fields: [userId], references: [id])

  @@index([createdAt, userId])
}
